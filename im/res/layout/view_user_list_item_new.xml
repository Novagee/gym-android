<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/user_list_item_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/user_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
	    android:singleLine="true"
	    android:ellipsize="end"
        android:textColor="@color/no1" />
       <RelativeLayout
        android:id="@+id/btn_chat"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="false"
        android:layout_below="@id/user_list_item_name"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_bg"
        android:paddingLeft="24dp"
        android:paddingRight="24dp" 
        android:gravity="center_horizontal"
        android:layout_gravity="center">
     <TextView
            android:id="@+id/user_list_item_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/tab_title_chat"
            android:textColor="@color/no1"
            android:textSize="13sp" />
     </RelativeLayout>
</LinearLayout>