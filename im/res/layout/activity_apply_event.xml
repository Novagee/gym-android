<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="#5BB5B3">

        <ImageView
            android:id="@+id/event_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:src="@drawable/menu_back" />

        <TextView
            android:id="@+id/event_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="@string/event_detail"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>
    
    <ImageView
        android:id="@+id/event_pic"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="150dip" />
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:orientation="horizontal" >
         <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/event_detail"
            android:layout_weight="1"
            android:textColor="#5BB5B3"
            android:textSize="18sp" />
          <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="horizontal" >
           <ImageView
        android:id="@+id/img_msg_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:src="@drawable/ico_love" />
            <TextView
            android:id="@+id/event_apply_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_unknown"
            android:textSize="12sp" />
        </LinearLayout>
     </LinearLayout>  

     
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
          
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@android:color/white"
        android:orientation="horizontal" >
           <ImageView
        android:id="@+id/img_msg_item"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:src="@drawable/ico_pos" />
            <TextView
            android:id="@+id/event_content_item"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_unknown"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
     </LinearLayout>
     <View
         android:layout_width="match_parent"
         android:layout_height="1dip"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:background="#F3F3F3" />
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@android:color/white"
        android:orientation="horizontal" >
           <ImageView
        android:id="@+id/img_msg_item"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:src="@drawable/ico_time" />
            <TextView
            android:id="@+id/event_content_item"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_unknown"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
     </LinearLayout>
     <View
         android:layout_width="match_parent"
         android:layout_height="1dip"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:background="#F3F3F3" />
     
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@android:color/white"
        android:orientation="horizontal" >
           <ImageView
        android:id="@+id/img_msg_item"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:src="@drawable/ico_money" />
            <TextView
            android:id="@+id/event_content_item"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_unknown"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
     </LinearLayout>
     <View
         android:layout_width="match_parent"
         android:layout_height="1dip"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:background="#F3F3F3" />
    </LinearLayout>
    <TextView
            android:id="@+id/event_content_item"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_detail"
            android:textColor="#6D6E70"
            android:textSize="18sp" />
     
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >
     <TextView
            android:id="@+id/event_description"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
     </LinearLayout>
     <TextView
        android:id="@+id/apply_event_button"
        android:clickable="true" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/event_apply_me"
        android:textColor="@android:color/white"
        android:background="@drawable/textview_style"
        android:textSize="20sp" />
   

  </LinearLayout>
</ScrollView>