<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg_color"
        android:padding="@dimen/scale_10dp" >

        <ImageView
            android:id="@+id/ivPrefCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera_icon_border" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/Title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_26sp" />

        <ImageView
            android:id="@+id/ivPrefFriendList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/friendlist_border" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/scale_10dp"
        android:layout_marginTop="@dimen/scale_15dp"
        android:text="@string/Gender"
        android:textColor="@color/pref_text_color"
        android:textStyle="bold"
        android:textSize="@dimen/txt_22sp" />

    <ImageView
        android:id="@+id/ivGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/scale_10dp"
        android:src="@drawable/gender_f" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pref_bg_color"
        android:layout_marginTop="@dimen/scale_30dp"
        android:paddingLeft="@dimen/scale_10dp"
        android:paddingTop="@dimen/scale_5dp"
        android:paddingBottom="@dimen/scale_5dp"
        android:paddingRight="@dimen/scale_10dp" >

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/pref_text_color"
            android:textSize="@dimen/txt_20sp"
            android:text="@string/Location" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/scale_10dp"
            android:src="@drawable/map_pin" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:text="" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pref_bg_color"
        android:layout_marginTop="@dimen/scale_30dp"
        android:paddingLeft="@dimen/scale_10dp"
        android:paddingTop="@dimen/scale_12dp"
        android:paddingBottom="@dimen/scale_12dp" >

        <TextView
            android:id="@+id/tvPrivacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/pref_text_color"
            android:textSize="@dimen/txt_20sp"
            android:text="@string/PrivacyPolicy" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale_30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ok_icon" />

</LinearLayout>